{  
  EIMSK = 0;
  counter++;
  interrupts();
  I2Cdev::readBytes(MPU6050_DEFAULT_ADDRESS, MPU6050_RA_ACCEL_XOUT_H, 14, toSend);
  
  toSend[14] = 't';
  toSend[15] = 't';
  toSend[16] = 'p';
  toSend[17] = 'p';
  memset(&toSend[18], ';', singleMeasureSize);
  //toSend[18] = ';';
  //memcpy(dataBuffer [bufferOffset * singleMeasureSize], toSend, singleMeasureSize);
  bufferOffset++;
  newMpuDataInBuf = true;
  EIMSK = 1;
}

